{
  "name": "frontend",
  "version": "0.2.0",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "Svelte",
    "Canister",
    "Docker",
    "Rust"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "build:release": "rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c --bundleConfigAsCjs -w",
    "dev-docker": "rollup -c -w --configExpose",
    "start": "sirv public --no-clear -s --port 3000",
    "start-expose": "sirv public --no-clear -s --host 0.0.0.0 --port 3000",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "print-dfx-ii": "echo local Internet Identity: http://$(dfx canister id internet_identity).localhost:8000",
    "print-dfx-www": "echo local dfx frontend server: http://$(dfx canister id www).localhost:8000",
    "print-local-www": "echo local frontend server: http://localhost:3000"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@rollup/plugin-wasm": "^6.1.3",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.9.1",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "daisyui": "^1.25.4",
    "idb-keyval": "6.2.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.49",
    "rollup": "^4.27.3",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-inject": "^3.0.2",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "rollup-plugin-svelte": "^7.1.4",
    "svelte": "^3.59.1",
    "svelte-check": "^3.3.2",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^5.0.3",
    "tailwindcss": "^3.0.17",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@shipstone-labs/ic-vetkd-notes-client": "^0.1.1",
    "sirv-cli": "^1.0.0",
    "svelte-copy": "^1.4.2",
    "svelte-icons": "^2.1.0",
    "svelte-router-spa": "^6.0.3",
    "typewriter-editor": "^0.6.45",
    "vetkd-notes-canister": "workspace:*"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "./jest-env.js"
    ],
    "testEnvironment": "jsdom"
  }
}
